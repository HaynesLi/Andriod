<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/rectangle">
        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/rover_name_and_id_content"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="20sp"
                android:text="Name (ID)">
            </TextView>
            <TextView
                android:id="@+id/rover_battery_content"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Battery">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageButton
                android:visibility="gone"
                android:id="@+id/button_delete_rover"
                android:contentDescription="@string/delete_rover_button_contentDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@+id/rover_ip_content"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_delete" />

            <CheckBox
                android:id="@+id/checkBox_use_this_rover"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>