<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startScreen">
    <fragment
        android:id="@+id/startScreen"
        android:name="com.paltech.dronesncars.StartScreen"
        android:label="fragment_start_screen"
        tools:layout="@layout/fragment_start_screen" >
        <action
            android:id="@+id/action_startScreen_to_droneScreen"
            app:destination="@id/droneScreen" />
    </fragment>
    <fragment
        android:id="@+id/droneScreen"
        android:name="com.paltech.dronesncars.DroneScreen"
        android:label="fragment_drone_screen"
        tools:layout="@layout/fragment_drone_screen" >
        <action
            android:id="@+id/action_droneScreen_to_scanResultsFragment"
            app:destination="@id/scanResultsFragment" />
    </fragment>
    <fragment
        android:id="@+id/scanResultsFragment"
        android:name="com.paltech.dronesncars.ScanResultsFragment"
        android:label="fragment_scan_results"
        tools:layout="@layout/fragment_scan_results" >
        <action
            android:id="@+id/action_scanResultsFragment_to_roverRouteFragment"
            app:destination="@id/roverRouteFragment" />
    </fragment>
    <fragment
        android:id="@+id/roverStatusFragment"
        android:name="com.paltech.dronesncars.RoverStatusFragment"
        android:label="fragment_rover_status"
        tools:layout="@layout/fragment_rover_status" >
        <action
            android:id="@+id/action_roverStatusFragment_to_reportFragment"
            app:destination="@id/reportFragment" />
    </fragment>
    <fragment
        android:id="@+id/reportFragment"
        android:name="com.paltech.dronesncars.ReportFragment"
        android:label="fragment_report"
        tools:layout="@layout/fragment_report" />
    <fragment
        android:id="@+id/roverRouteFragment"
        android:name="com.paltech.dronesncars.RoverRouteFragment"
        android:label="fragment_rover_route"
        tools:layout="@layout/fragment_rover_route" >
        <action
            android:id="@+id/action_roverRouteFragment_to_roverStatusFragment"
            app:destination="@id/roverStatusFragment" />
    </fragment>

</navigation>